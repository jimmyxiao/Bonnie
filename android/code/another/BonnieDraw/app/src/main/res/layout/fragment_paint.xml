<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/create_new_paint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Page"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/paint_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/create_new_paint"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/paint_record"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Record"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/paint_setting"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
