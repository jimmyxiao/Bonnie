<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sctw.bonniedraw.fragment.ProfileSettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBtn_profile_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/Transparent"
            app:srcCompat="@drawable/back_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:text="帳號設定選項"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/Transparent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_profile_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:drawableRight="@drawable/ic_chevron_right_selector"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:text="@string/profile_edit_profile"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/btn_profile_update_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:drawableRight="@drawable/ic_chevron_right_selector"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:text="@string/profile_setting_chage_pwd"
            android:textAlignment="viewStart" />


        <Button
            android:id="@+id/btn_profile_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:drawableRight="@drawable/ic_chevron_right_selector"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:text="@string/profile_setting_description"
            android:textAlignment="viewStart" />


        <Button
            android:id="@+id/btn_profile_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:drawableRight="@drawable/ic_chevron_right_selector"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:text="@string/profile_setting_privacy_policy"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/btn_profile_terms_of_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:drawableRight="@drawable/ic_chevron_right_selector"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:text="@string/profile_setting_terms_of_use"
            android:textAlignment="viewStart" />
    </LinearLayout>

</LinearLayout>
