<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout_actitivy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sctw.bonniedraw.activity.LoginActivity">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/title_bar_img_logo" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayout_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoImg"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText_signup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/public_username"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayout_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/inputLayout_signup_name"
        android:layout_alignStart="@+id/inputLayout_signup_name"
        android:layout_below="@+id/inputLayout_signup_name"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/public_email"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayout_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/inputLayout_signup_email"
        android:layout_alignStart="@+id/inputLayout_signup_email"
        android:layout_below="@+id/inputLayout_signup_email"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:hintEnabled="true"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/public_password"
            android:inputType="textPassword"
            android:maxLength="15"
            app:passwordToggleTint="@color/colorPrimaryDark"
            app:passwordToggleTintMode="multiply" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayout_signup_repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/inputLayout_signup_password"
        android:layout_alignStart="@+id/inputLayout_signup_password"
        android:layout_below="@+id/inputLayout_signup_password"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText_signup_repassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/public_check_password"
            android:inputType="textPassword"
            android:maxLength="15"
            app:passwordToggleTint="@color/colorPrimaryDark"
            app:passwordToggleTintMode="multiply" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_get_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/inputLayout_signup_repassword"
        android:layout_alignStart="@+id/inputLayout_signup_repassword"
        android:layout_below="@+id/inputLayout_signup_repassword"
        android:background="@drawable/icon_login_email"
        android:text="@string/public_register"
        android:textColor="@color/White" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/LightGrey"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/signin_have_account" />

        <TextView
            android:id="@+id/textView_singup_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/public_login"
            android:textColor="@color/Blue" />
    </LinearLayout>

</RelativeLayout>
