<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout_works_extra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50505050"
    android:gravity="bottom">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Transparent">

            <LinearLayout
                android:id="@+id/ll_single_own"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_border_dialog"
                android:orientation="vertical">

                <Button
                    android:id="@+id/paint_grid_none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Transparent"
                    android:padding="20dp"
                    android:text="@string/grid_none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:background="#aaa" />

                <Button
                    android:id="@+id/paint_grid_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Transparent"
                    android:padding="20dp"
                    android:text="@string/grid_3x3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:background="#aaa" />

                <Button
                    android:id="@+id/paint_grid_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Transparent"
                    android:padding="20dp"
                    android:text="@string/grid_6x6" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:background="#aaa" />

                <Button
                    android:id="@+id/paint_grid_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Transparent"
                    android:padding="20dp"
                    android:text="@string/grid_10x10" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:background="#aaa" />

                <Button
                    android:id="@+id/paint_grid_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Transparent"
                    android:padding="20dp"
                    android:text="@string/grid_20x20" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_single_own"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/paint_grid_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_border_dialog"
                    android:padding="20dp"
                    android:text="@string/cancel"
                    android:textColor="@color/Blue" />

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>