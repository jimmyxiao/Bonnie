<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout_msg_extra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50505050"
    android:gravity="bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/Transparent">

        <LinearLayout
            android:id="@+id/ll_single_own"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_extra_msg_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_border_dialog"
                android:padding="20dp"
                android:text="@string/uc_delete"
                android:textColor="@color/Red" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_single_own"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_extra_msg_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_border_dialog"
                android:padding="20dp"
                android:text="@string/uc_cancel"
                android:textColor="@color/Blue" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>