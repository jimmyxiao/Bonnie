<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_paint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPaintLayout"
    android:orientation="vertical"
    tools:context="com.sctw.bonniedraw.paint.PaintActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/paint_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPaintLayout"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/id_btn_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:srcCompat="@drawable/ic_save_black_24dp" />

            <ImageButton
                android:id="@+id/id_btn_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:srcCompat="@drawable/ic_insert_drive_file_black_24dp" />

            <Button
                android:id="@+id/btn_paint_undo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="Undo"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_paint_redo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="Redo"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/id_btn_previous"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="上"
                android:textAllCaps="false"
                android:visibility="invisible" />

            <Button
                android:id="@+id/id_btn_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="下"
                android:textAllCaps="false"
                android:visibility="invisible" />

            <Button
                android:id="@+id/id_btn_play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="Start"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/id_btn_autoplay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="Auto"
                android:textAllCaps="false" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/view_freepain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/paint_item"
        android:layout_gravity="fill_vertical"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/paint_control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPaintLayout"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/line_width_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />

            <FrameLayout
                android:id="@+id/custom_paint_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/bottom_bar_ic_new" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/Transparent"
            app:srcCompat="@drawable/paint_erase" />

        <ImageButton
            android:id="@+id/id_btn_colorpicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/Transparent"
            app:srcCompat="@drawable/paint_colorpick" />

    </LinearLayout>

</RelativeLayout>
