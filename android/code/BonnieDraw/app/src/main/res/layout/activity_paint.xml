<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_paint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GridLineColor"
    android:orientation="vertical"
    tools:context="com.sctw.bonniedraw.paint.PaintActivity">

    <FrameLayout
        android:id="@+id/view_freepaint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/paint_control_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paint_item" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@color/Transparent"
        android:elevation="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/paint_control_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/draw_pen_box" />

    <LinearLayout
        android:id="@+id/paint_control_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPaintLayout"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/id_btn_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:onClick="sizesPicks"
            android:padding="8dp"
            app:srcCompat="@drawable/shape_oval" />

        <ImageButton
            android:id="@+id/id_btn_erase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:onClick="earse_mode"
            android:padding="8dp"
            app:srcCompat="@drawable/draw_ic_erase" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent" />

        <ImageButton
            android:id="@+id/id_btn_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:padding="8dp"
            app:srcCompat="@drawable/draw_ic_new" />


        <ImageButton
            android:id="@+id/id_btn_colorpicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Black"
            android:onClick="colorPicks"
            android:padding="8dp"
            android:scaleX="0.45"
            android:scaleY="0.8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paint_item">

        <Button
            android:id="@+id/id_paint_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ZOOM MODE" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/paint_control_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/id_btn_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="上"
            android:textAllCaps="false"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/id_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="下"
            android:textAllCaps="false"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@+id/id_btn_previous" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/paint_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPaintLayout"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/id_btn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:onClick="back"
            android:padding="8dp"
            app:srcCompat="@drawable/top_bar_ic_back" />

        <ImageButton
            android:id="@+id/btn_paint_undo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:padding="8dp"
            app:srcCompat="@drawable/top_bar_ic_forward" />

        <ImageButton
            android:id="@+id/btn_paint_redo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:padding="8dp"
            app:srcCompat="@drawable/top_bar_ic_backward" />

        <ImageButton
            android:id="@+id/id_btn_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:padding="8dp"
            app:srcCompat="@drawable/top_bar_ic_play" />

        <ImageButton
            android:id="@+id/id_btn_autoplay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:padding="8dp"
            app:srcCompat="@drawable/top_bar_ic_play" />

        <ImageButton
            android:id="@+id/id_btn_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:padding="8dp"
            app:srcCompat="@drawable/top_bar_ic_share" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
