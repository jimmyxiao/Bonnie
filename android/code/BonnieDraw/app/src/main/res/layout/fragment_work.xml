<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/paint_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/works_user_photo"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/works_user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="用戶名稱"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/works_work_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="作品名稱" />

        <ImageButton
            android:id="@+id/works_user_extra"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            card_view:srcCompat="@drawable/works_ic_more" />
    </LinearLayout>

    <ImageView
        android:id="@+id/works_user_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/paint_item"
        card_view:srcCompat="@color/Teal" />

    <RelativeLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/works_user_image"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/works_user_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/Transparent"
            card_view:srcCompat="@drawable/work_ic_like" />

        <ImageButton
            android:id="@+id/works_user_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/works_user_good"
            android:background="@color/Transparent"
            card_view:srcCompat="@drawable/work_ic_message" />

        <ImageButton
            android:id="@+id/works_user_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/works_user_msg"
            android:background="@color/Transparent"
            card_view:srcCompat="@drawable/work_ic_send" />

        <ImageButton
            android:id="@+id/works_user_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/works_user_good_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="87人按讚" />

        <TextView
            android:id="@+id/works_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="發布日期: 2017/10/2   22:00" />

        <TextView
            android:id="@+id/works_user_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="類別: 插畫" />

    </LinearLayout>

</RelativeLayout>