<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout_works_extra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50505050"
    android:gravity="bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/Transparent">

        <LinearLayout
            android:id="@+id/ll_single_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:background="@drawable/shape_border_dialog"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_extra_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:padding="20dp"
                android:text="@string/report"
                android:textColor="@color/Red" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#aaa" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_single_own"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_single_other"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_border_dialog"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_extra_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:padding="20dp"
                android:text="刪除作品" />

            <View
                android:id="@+id/view_divier_extra_delete"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#aaa" />

            <Button
                android:id="@+id/btn_extra_edit_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:padding="20dp"
                android:text="編輯作品" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_single_own"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_extra_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_border_dialog"
                android:padding="20dp"
                android:text="@string/cancel"
                android:textColor="@color/Blue"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>