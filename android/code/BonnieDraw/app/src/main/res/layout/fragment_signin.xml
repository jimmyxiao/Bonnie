<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_actitivy_layout"
    tools:context="com.sctw.bonniedraw.activity.LoginActivity">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/title_bar_img_logo" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoImg"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/public_phone"
            android:inputType="phone"
            android:maxLength="10" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_below="@+id/phoneLayout"
        android:layout_alignStart="@+id/phoneLayout"
        android:layout_alignEnd="@+id/phoneLayout">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/public_username"
            android:inputType="textPersonName"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_below="@+id/nameLayout"
        android:layout_alignStart="@+id/nameLayout"
        android:layout_alignEnd="@+id/nameLayout">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/public_email"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:passwordToggleEnabled="true"
        android:layout_below="@+id/emailLayout"
        android:layout_alignStart="@+id/emailLayout"
        android:layout_alignEnd="@+id/emailLayout"
        app:hintEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/public_password"
            android:maxLength="15"
            android:inputType="textPassword"
            app:passwordToggleTint="@color/colorPrimaryDark"
            app:passwordToggleTintMode="multiply"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/repasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:passwordToggleEnabled="true"
        android:layout_below="@+id/passwordLayout"
        android:layout_alignStart="@+id/passwordLayout"
        android:layout_alignEnd="@+id/passwordLayout">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputUserRePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/public_check_password"
            android:maxLength="15"
            android:inputType="textPassword"
            app:passwordToggleTint="@color/colorPrimaryDark"
            app:passwordToggleTintMode="multiply"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/login_icon_email"
        android:text="@string/public_register"
        android:textColor="@color/White"
        android:layout_below="@+id/repasswordLayout"
        android:layout_alignStart="@+id/repasswordLayout"
        android:layout_alignEnd="@+id/repasswordLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/LightGrey"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/signin_have_account" />

        <TextView
            android:id="@+id/signupButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/public_login"
            android:textColor="@color/Blue" />
    </LinearLayout>

</RelativeLayout>
