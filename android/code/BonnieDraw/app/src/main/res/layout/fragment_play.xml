<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    tools:context="com.sctw.bonniedraw.fragment.PlayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPaintLayout"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/imgBtn_paint_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/Transparent"
            app:srcCompat="@drawable/top_bar_ic_back" />

        <TextView
            android:id="@+id/textView_play_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@color/Transparent"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_paint_play_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgBtn_replay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_restart" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_paint_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImg_single_work_user_photo"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_single_work_username"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="User Name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_single_work_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Work Name" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_single_work_follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/follow"
            android:textAlignment="center"
            android:textColor="@color/HyperLinkColor"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/imgBtn_single_work_extra"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            app:srcCompat="@drawable/works_ic_more" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DivColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout_single_work"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgView_single_work_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEE"
                android:orientation="vertical"
                android:padding="8dp">

                <ProgressBar
                    android:id="@+id/progressBar_single_work"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imgBtn_slow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Transparent"
                        app:srcCompat="@drawable/ic_drawplay_goback_selector" />


                    <ImageButton
                        android:id="@+id/imgBtn_single_work_previous"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Transparent"
                        app:srcCompat="@drawable/ic_drawplay_prev_selector" />

                    <ImageButton
                        android:id="@+id/imgBtn_single_work_play"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Transparent"
                        app:srcCompat="@drawable/drawplay_ic_play" />

                    <ImageButton
                        android:id="@+id/imgBtn_single_work_pause"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Transparent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/drawplay_ic_timeout" />

                    <ImageButton
                        android:id="@+id/imgBtn_single_work_next"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Transparent"
                        app:srcCompat="@drawable/ic_drawplay_next_selector" />

                    <ImageButton
                        android:id="@+id/imgBtn_fast"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Transparent"
                        app:srcCompat="@drawable/ic_drawplay_fast_selector" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/imgBtn_single_work_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Transparent"
                    app:srcCompat="@drawable/ic_favorite_selector" />

                <TextView
                    android:id="@+id/textView_single_work_good_total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="00" />


                <ImageButton
                    android:id="@+id/imgBtn_single_work_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Transparent"
                    app:srcCompat="@drawable/work_ic_message" />

                <TextView
                    android:id="@+id/textView_single_work_msg_total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="00" />


                <ImageButton
                    android:id="@+id/imgBtn_single_work_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Transparent"
                    app:srcCompat="@drawable/share_icon" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imgBtn_single_work_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@color/Transparent"
                        app:srcCompat="@drawable/ic_bookmark_selector" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_single_work_create_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="Publish" />

            <TextView
                android:id="@+id/textView_single_work_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="Img Descriiption" />

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
