<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout_work"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout_paint_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImg_single_work_user_photo"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_single_work_username"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="User Name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_single_work_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Work Name" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView_single_work_follow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="追蹤"
                android:textAlignment="center"
                android:textColor="@color/HyperLinkColor"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/imgBtn_single_work_extra"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/Transparent"
                app:srcCompat="@drawable/works_ic_more" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Grey" />

                <FrameLayout
                    android:id="@+id/frameLayout_single_work"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/imgView_single_work_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEE"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ProgressBar
                        android:id="@+id/progressBar_single_work"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_single_work_current_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0 / 100%"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imgBtn_single_work_previous"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/Transparent"
                            android:visibility="invisible"
                            app:srcCompat="@drawable/prev_ic_off" />

                        <ImageButton
                            android:id="@+id/imgBtn_single_work_play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/Transparent"
                            app:srcCompat="@drawable/play_ic_off" />

                        <ImageButton
                            android:id="@+id/imgBtn_single_work_pause"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/Transparent"
                            android:visibility="gone"
                            app:srcCompat="@drawable/time_out_ic_off" />

                        <ImageButton
                            android:id="@+id/imgBtn_single_work_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/Transparent"
                            android:visibility="invisible"
                            app:srcCompat="@drawable/next_ic_off" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imgBtn_single_work_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/Transparent"
                        app:srcCompat="@drawable/ic_favorite_selector" />

                    <ImageButton
                        android:id="@+id/imgBtn_single_work_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_toEndOf="@+id/imgBtn_single_work_good"
                        android:background="@color/Transparent"
                        app:srcCompat="@drawable/work_ic_message" />

                    <ImageButton
                        android:id="@+id/imgBtn_single_work_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_toEndOf="@+id/imgBtn_single_work_msg"
                        android:background="@color/Transparent"
                        app:srcCompat="@drawable/share_icon" />

                    <ImageButton
                        android:id="@+id/imgBtn_single_work_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="8dp"
                        android:background="@color/Transparent"
                        app:srcCompat="@drawable/ic_bookmark_selector" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_single_work_good_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp"
                        android:text="Good Total" />

                    <TextView
                        android:id="@+id/textView_single_work_create_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp"
                        android:text="Publish" />

                    <TextView
                        android:id="@+id/textView_single_work_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp"
                        android:text="Img Descriiption" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>