<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sctw.bonniedraw.fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/profile_userId"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="ID"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/profile_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/Transparent"
            app:srcCompat="@drawable/menu_ic_account" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Black"
        android:layout_below="@+id/profile_toolbar" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_profile_icon"
            android:text="編輯個人檔案"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/profile_userWorks"
            app:layout_constraintRight_toRightOf="@+id/profile_userFollow"
            app:layout_constraintTop_toBottomOf="@+id/profile_userFans" />

        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/profile_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="姓名"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/profile_photo"
            app:layout_constraintRight_toRightOf="@+id/profile_photo"
            app:layout_constraintTop_toBottomOf="@+id/profile_photo" />


        <TextView
            android:id="@+id/username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="24dp"
            android:text="XX"
            android:textAlignment="center"
            app:layout_constraintRight_toLeftOf="@+id/userworks_textview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_userWorks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="作品數"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="@+id/username_textview"
            app:layout_constraintRight_toRightOf="@+id/username_textview"
            app:layout_constraintTop_toBottomOf="@+id/username_textview" />

        <TextView
            android:id="@+id/userworks_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="24dp"
            android:text="XX"
            android:textAlignment="center"
            app:layout_constraintRight_toLeftOf="@+id/userfollow_textview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_userFans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="粉絲數"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="@+id/userworks_textview"
            app:layout_constraintRight_toRightOf="@+id/userworks_textview"
            app:layout_constraintTop_toBottomOf="@+id/userworks_textview" />


        <TextView
            android:id="@+id/userfollow_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="24dp"
            android:text="XX"
            android:textAlignment="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_userFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="追蹤中"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="@+id/userfollow_textview"
            app:layout_constraintRight_toRightOf="@+id/userfollow_textview"
            app:layout_constraintTop_toBottomOf="@+id/userfollow_textview" />

        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@color/Transparent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/menu_ic_out"
            tools:layout_editor_absoluteY="8dp" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/viewBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:background="@color/Transparent"
        android:divider="@drawable/divider_layout"
        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageButton
            android:id="@+id/profile_grid_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/White"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            app:srcCompat="@drawable/personal_ic_rectangle" />

        <ImageButton
            android:id="@+id/profile_list_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/White"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            app:srcCompat="@drawable/personal_ic_list" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/profile_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/viewBtnLayout"
        android:background="@color/Transparent" />

</RelativeLayout>
