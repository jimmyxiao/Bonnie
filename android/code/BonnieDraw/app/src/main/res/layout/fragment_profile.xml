<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sctw.bonniedraw.fragment.ProfileFragment">

    <LinearLayout
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/profile_userId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="6"
            android:paddingLeft="16dp"
            android:textColor="#000" />

        <ImageButton
            android:id="@+id/profile_grid_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            app:srcCompat="@drawable/personal_ic_rectangle" />

        <ImageButton
            android:id="@+id/profile_list_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            app:srcCompat="@drawable/personal_ic_list" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            app:srcCompat="@drawable/personal_ic_list" />

        <ImageButton
            android:id="@+id/profile_setting_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            app:srcCompat="@drawable/personal_ic_shape" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_toolbar"
        android:background="#aaa" />

    <LinearLayout
        android:id="@+id/porfile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/divider"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/profile_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_profile_icon"
            android:text="@string/profile_edit_profile"
            android:textColor="@color/White"
            app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/porfile_layout"
        android:background="@drawable/shape_border"
        android:divider="@drawable/divider_layout"
        android:orientation="horizontal"
        android:padding="8dp"
        android:showDividers="middle|">

        <LinearLayout
            android:id="@+id/wroks_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userworks_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_userWorks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_works_count"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fans_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userfollow_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_userFans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_fans_count"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/follow_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_userFollow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_follow_count"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/profile_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/viewInfoLayout"
        android:background="@color/Transparent" />


</RelativeLayout>
