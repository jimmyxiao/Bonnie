<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?attr/actionBarSize"
    android:orientation="vertical"
    tools:context="com.sctw.bonniedraw.fragment.ProfileFragment">

    <FrameLayout
        android:id="@+id/frameLayout_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/White">

        <ProgressBar
            android:id="@+id/progressBar_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal"
            android:padding="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6" />

            <ImageButton
                android:id="@+id/imgBtn_profile_grid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/Transparent"
                app:srcCompat="@drawable/personal_ic_rectangle" />

            <ImageButton
                android:id="@+id/imgBtn_profile_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/Transparent"
                app:srcCompat="@drawable/personal_ic_list" />

            <ImageButton
                android:id="@+id/imgBtn_profile_bookmark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Transparent"
                app:srcCompat="@drawable/collect_ic_off" />

            <ImageButton
                android:id="@+id/imgBtn_profile_friends"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/Transparent"
                app:srcCompat="@drawable/recommend_icon" />

            <ImageButton
                android:id="@+id/imgBtn_profile_setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/Transparent"
                app:srcCompat="@drawable/personal_ic_shape" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/DivColor" />


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeLayout_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/Transparent"
                        android:clipToPadding="false" />

                </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
